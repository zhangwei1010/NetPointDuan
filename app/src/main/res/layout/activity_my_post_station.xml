<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:card_view="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f0f0f0"
	android:orientation="vertical"
	tools:context=".ui.homepage.MyPostStationActivity">

	<RelativeLayout
		android:id="@+id/rlAppbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_44">

		<ImageView
			android:id="@+id/ivBack"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_centerVertical="true"
			android:layout_marginLeft="15dp"
			android:src="@drawable/arrow_left_black" />

		<TextView
			android:id="@+id/tvTitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_below="@+id/iv_close"
			android:layout_centerInParent="true"
			android:layout_marginLeft="25dp"
			android:text="@string/my_post_station"
			android:textColor="#333333"
			android:textSize="20sp" />
	</RelativeLayout>

	<ImageView
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_110"
		android:scaleType="centerCrop"
		android:src="@drawable/map_background" />

	<androidx.cardview.widget.CardView
		android:id="@+id/card_view"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_gravity="center"
		android:layout_marginLeft="@dimen/dp_21"
		android:layout_marginTop="20dp"
		android:layout_marginRight="@dimen/dp_21"
		android:layout_marginBottom="60dp"
		android:padding="2dp"
		card_view:cardCornerRadius="8dp"
		card_view:cardElevation="1dp">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<TextView
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="15dp"
				android:layout_marginBottom="15dp"
				android:gravity="center"
				android:text="查看附近快递点"
				android:textColor="#333333"
				android:textSize="16sp" />

			<View
				android:layout_width="match_parent"
				android:layout_height="0.5dp"
				android:background="#e4e4e4"></View>

			<com.net.point.view.HeadRecycleView
				android:id="@+id/mRecycleView"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_marginTop="15dp"
				app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
		</LinearLayout>
	</androidx.cardview.widget.CardView>

</LinearLayout>