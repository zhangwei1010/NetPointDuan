<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#55000000"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:visibility="visible"></LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_472"
        android:background="@drawable/corner_16_apply_net_drawable"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_20"
            android:layout_marginTop="8dp"
            android:layout_marginRight="@dimen/dp_13">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/close_white"
                android:visibility="invisible" />

            <TextView
                android:id="@+id/tv_please_choose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:text="请选择代理的省"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/ivClose"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@drawable/close_white" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_point_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="60dp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_province"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:visibility="gone">

                <View
                    android:id="@+id/tv_point_1"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_blue_drawable" />

                <TextView
                    android:id="@+id/tv_province"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_20"
                    android:layout_toRightOf="@+id/tv_point_1"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="河南省"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_line_1"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_below="@id/tv_point_1"
                    android:gravity="center">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/main_button" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_city"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:visibility="gone">

                <View
                    android:id="@+id/tv_point_2"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_blue_drawable" />

                <TextView
                    android:id="@+id/tv_city"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="0dp"
                    android:layout_toRightOf="@+id/tv_point_2"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="郑州市"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_line_2"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/main_button" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_counties"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:visibility="gone">

                <View
                    android:id="@+id/tv_point_3"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_blue_drawable" />

                <TextView
                    android:id="@+id/tv_counties"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_toRightOf="@+id/tv_point_3"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="中牟县"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_line_3"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/main_button" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_districts"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_20"
                android:visibility="gone">

                <View
                    android:id="@+id/tv_point_4"
                    android:layout_width="7dp"
                    android:layout_height="7dp"
                    android:layout_centerVertical="true"
                    android:background="@drawable/circle_blue_drawable" />

                <TextView
                    android:id="@+id/tv_districts"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_25"
                    android:layout_toRightOf="@+id/tv_point_4"
                    android:gravity="center"
                    android:paddingLeft="10dp"
                    android:text="青年街道"
                    android:textColor="#333333"
                    android:textSize="14sp" />

                <LinearLayout
                    android:id="@+id/ll_line_4"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    android:layout_above="@id/tv_point_4"
                    android:gravity="center">

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/main_button" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_please_choose"
            android:layout_marginTop="5dp"
            android:background="#eeeeee"
            android:visibility="visible"></View>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/view"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mRecycleView"
                android:layout_width="wrap_content"
                android:layout_height="250dp"
                android:layout_weight="1"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mVerRecycleView"
                android:layout_width="70dp"
                android:layout_height="250dp"
                android:fadeScrollbars="false"
                android:scrollbarSize="5dp"
                android:scrollbarStyle="insideOverlay"
                android:scrollbars="vertical"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"></androidx.recyclerview.widget.RecyclerView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/tv_please_choose"
            android:layout_marginTop="8dp"
            android:background="#eeeeee"
            android:visibility="visible"></View>

        <TextView
            android:id="@+id/tv_successful_sign"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="13dp"
            android:gravity="center"
            android:text="是否成为该省代理"
            android:textColor="@color/main_button"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_comfirm_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_80"
            android:layout_marginTop="13dp"
            android:layout_marginRight="@dimen/dp_80"
            android:visibility="visible">

            <Button
                android:id="@+id/comfirm"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_25"
                android:background="@color/main_button"
                android:text="@string/comfirm"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"></LinearLayout>

            <Button
                android:id="@+id/cancel"
                android:layout_width="@dimen/dp_75"
                android:layout_height="@dimen/dp_25"
                android:background="@drawable/stroke_grey_drawable"
                android:text="@string/cancel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>