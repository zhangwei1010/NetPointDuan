<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:layout_marginLeft="10dp"
	android:layout_marginTop="10dp"
	android:layout_marginRight="10dp"
	android:background="@drawable/corner_5_white_dispatch_drawable"
	android:orientation="vertical">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="14dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="客户姓名:"
			android:textColor="#c6c6c6"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/tv_name"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:gravity="center"
			android:text=""
			android:textColor="#333333"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="14dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="联系方式:"
			android:textColor="#c6c6c6"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/tv_mobile"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:gravity="center"
			android:text=""
			android:textColor="#333333"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="14dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="地          址:"
			android:textColor="#c6c6c6"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/tv_addressee"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:gravity="center"
			android:text=""
			android:textColor="#333333"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:gravity="center_vertical"
		android:orientation="horizontal"
		android:padding="14dp">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:text="地          址:"
			android:textColor="#c6c6c6"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/tv_reason"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginLeft="5dp"
			android:gravity="center"
			android:text="因为地址没有写详细，无法找到相应地址，所以
无法进行派件"
			android:textColor="#333333"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/dp_53"
		android:background="#fbfbfb"
		android:marginRight="10dp"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:gravity="center|end"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_handle"
				android:layout_width="74dp"
				android:layout_height="35dp"
				android:background="@drawable/stroke_green1_drawable"
				android:gravity="center"
				android:text="确认处理"
				android:textColor="@color/main_button"
				android:textSize="14sp" />
		</LinearLayout>
	</LinearLayout>
</LinearLayout>