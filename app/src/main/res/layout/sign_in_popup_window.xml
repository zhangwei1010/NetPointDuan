<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#55000000">

	<RelativeLayout
		android:id="@+id/rl_content"
		android:layout_width="@dimen/dp_285"
		android:layout_height="@dimen/dp_321"
		android:layout_centerInParent="true">

		<ImageView
			android:id="@+id/iv_sign_in_back"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:src="@drawable/check_in" />

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/dp_180"
			android:orientation="vertical">

			<TextView
				android:id="@+id/tv_sign_status"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="签到成功"
				android:textColor="@color/main_button"
				android:textSize="17sp" />

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="70dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="56dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="累计签到"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tv_signDays"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="1"
					android:textColor="@color/main_button"
					android:textSize="14sp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="天,今日"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tv_receivePoint"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="+1"
					android:textColor="@color/main_button"
					android:textSize="14sp" />

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="积分,"
					android:textSize="14sp" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginLeft="70dp"
				android:layout_marginTop="10dp"
				android:layout_marginRight="56dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="连续签到天可获赠"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tv_days"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="7"
					android:textSize="14sp" />

				<TextView
					android:id="@+id/tv_points"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:text="10积分"
					android:textColor="@color/main_button"
					android:textSize="14sp" />

			</LinearLayout>
		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:layout_marginTop="@dimen/dp_40"
			android:orientation="horizontal">

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="第"
				android:textColor="@color/white"
				android:textSize="17sp" />

			<TextView
				android:id="@+id/tv_sign_how"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="1"
				android:textColor="@color/white"
				android:textSize="54sp" />

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:gravity="center"
				android:text="天"
				android:textColor="@color/white"
				android:textSize="17sp" />

		</LinearLayout>
	</RelativeLayout>

	<ImageView
		android:id="@+id/ivClose"
		android:layout_width="@dimen/dp_25"
		android:layout_height="@dimen/dp_25"
		android:layout_below="@+id/rl_content"
		android:layout_centerHorizontal="true"
		android:layout_marginTop="10dp"
		android:src="@drawable/close_round" />

</RelativeLayout>